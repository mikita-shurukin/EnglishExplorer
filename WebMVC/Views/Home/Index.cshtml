<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1500px;
            margin: 100px auto;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
        }

        .btn {
            padding: 50px 100px;
            font-size: 36px;
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            text-decoration: none; /* Remove underline */
            display: inline-block; /* Make it inline block to center text */
            border: none; /* Remove border */
            cursor: pointer;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Add text shadow for contour */
            -webkit-text-stroke: 1px white; /* Add white stroke around text */
            text-stroke: 1px black; /* Add white stroke around text */
        }

        .get-words-btn {
            background-image: url('/images/img1.jpg');
        }

        .create-words-btn {
            background-image: url('/images/img2.jpg');
        }

        .random-words-btn {
            background-image: url('/images/img3.jpg');
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="btn-container">
            <a class="btn get-words-btn" href="@Url.Action("Get", "Words")">My all words</a>
            <a class="btn create-words-btn" href="@Url.Action("Create", "Words")">Create new word</a>
            <a class="btn random-words-btn" href="@Url.Action("RandomWords", "Words")">Random Words Game</a>
        </div>
    </div>
</body>
</html>
