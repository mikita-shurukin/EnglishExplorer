@model WebMVC.DAL.Models.Phrases

<!DOCTYPE html>
<html>
<head>
    <title>Create New Phrase</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        .container {
            max-width: 400px;
            margin: auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h2 {
            margin-bottom: 20px;
            color: #333;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #0056b3;
            }

        .validation-message {
            color: red;
            font-size: 12px;
            margin-top: -10px;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Create New Phrase</h2>
        <form asp-action="Create" asp-controller="Phrases" method="post" enctype="application/x-www-form-urlencoded">
            @Html.AntiForgeryToken()
            <div>
                <label asp-for="PhraseText">Word:</label>
                <input asp-for="PhraseText" />
                <span asp-validation-for="PhraseText" class="validation-message"></span>
            </div>
            <div>
                <label asp-for="Translation">Translation:</label>
                <input asp-for="Translation" />
                <span asp-validation-for="Translation" class="validation-message"></span>
            </div>
            <button type="submit">Create</button>
        </form>
    </div>
</body>
</html>
